{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "baseUrl": "./src",
    "paths": {
      "@styles/*": ["styles/*"],
      "@features/*": ["features/*"],
      "@assets/*": ["assets/*"],
      "@page/*": ["page/*"],
      "@components/*": ["components/*"],
      "@context/*": ["context/*"],
      "@data/*": ["data/*"],
      "@hooks/*": ["hooks/*"],
      "@layout/*": ["layout/*"],
      "@lib/*": ["lib/*"],
      "@services/*": ["services/*"],
      "@test/*": ["test/*"],
      "@utils/*": ["utils/*"],
      "@locale/*": ["locale/*"],
      "@config/*": ["config/*"],
      "@icons/*": ["assets/icons/*"],
    },
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "allowImportingTsExtensions" : true,
    "noEmit": true
  },
  "include": ["src", "cypress"],
  "exclude": ["node_modules", "dist"]
}
